<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title – Schedule</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <link href="~/Content/sicky_footer.css" rel="stylesheet">
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top" role="navigation">
        <div class="container">
            @if (HttpContext.Current.User.IsInRole("user"))
            {
                <div class="navbar-header">
                    <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>

                    @Html.ActionLink("Schedule", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
                </div>
                <div class="navbar-collapse collapse">

                    <ul class="nav navbar-nav">
                        <li>@Html.ActionLink("Личный кабинет", "Index", "Account")</li>
                        <li class="dropdown">
                            <a href="#" class="dropdown-toggle" data-toggle="dropdown">Данные приложения<b class="caret"></b></a>
                            <ul class="dropdown-menu">
                                <li class="divider"></li>
                                <li class="dropdown-header">Основные модели</li>
                                <li>@Html.ActionLink("Учебные группы", "Index", "Groups")</li>
                                <li>@Html.ActionLink("Ученые степени", "Index", "Degrees")</li>
                                <li>@Html.ActionLink("Должности", "Index", "PositionModels")</li>
                                <li>@Html.ActionLink("Преподаватели", "Index", "TeacherModels")</li>
                                <li>@Html.ActionLink("Файлы", "Index", "File")</li>
                                @*<li class="divider"></li>
                                <li class="dropdown-header">Пользователи</li>
                                <li>@Html.ActionLink("Пользователи", "GetAll", "Account")</li>
                                <li><a href="#">One more separated link</a></li>*@
                                <li class="divider"></li>
                                <li class="dropdown-header">Распределение нагрузки</li>
                                <li>@Html.ActionLink("Нагрузка", "Index", "Load")</li>
                            </ul>
                        </li>

                    </ul>
                    <ul class="nav navbar-nav navbar-right">
                        <li>@Html.ActionLink("Log Out", "Logout", "Account")</li>
                    </ul>
                </div>
            }
            else
            {

                <div class="navbar-header">
                    <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>

                    @Html.ActionLink("Schedule", "Login", "Account", new { area = "" }, new { @class = "navbar-brand" })
                </div>
            }
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()

        @*<footer>
                <p>&copy; @DateTime.Now.Year – приложение ASP.NET</p>
            </footer>*@
    </div>

    <div id="footer">
        <div class="container">
            <p class="text-muted">@DateTime.Now.Year - Schedule.</p>
        </div>
    </div>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
