@model Schedule.Models.HelpingModels.LoadsViewModel

<hr />
<h2>Нагрузки</h2>
<hr />
@if (HttpContext.Current.User.IsInRole("admin"))
{
    <ul class="nav nav-pills nav-stacked">
        <li>@Html.ActionLink("Let`s get it started...", "CreateLoad", "Load")</li>
    </ul>
    <hr />
}
<table class="table table-hover">
        @foreach (var item in Model.DayLoadRegulars)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.LoadName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.LoadKind)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.StudentKind)
                </td>
                <td>
                    @Html.ActionLink("Details", "DoneLoad", new { id = item.Id })
                    @if (HttpContext.Current.User.IsInRole("admin"))
                    {
                        <text> | </text>
                        @Html.ActionLink("Delete", "Delete", new { id = item.Id })
                    }
                </td>
            </tr>
        }
        @foreach (var item in Model.ZOLoadRegulars)
        {
            <tr>            
                <td>
                    @Html.DisplayFor(modelItem => item.LoadName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.LoadKind)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.StudentKind)
                </td>
                <td>
                    @Html.ActionLink("Details", "DoneLoadZO", new { id = item.Id })
                    @if (HttpContext.Current.User.IsInRole("admin"))
                    {
                        <text> | </text>
                        @Html.ActionLink("Delete", "Delete", new { id = item.Id })
                    }
                </td>
            </tr>
         }
            
    </table>
