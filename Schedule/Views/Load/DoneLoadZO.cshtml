@model IEnumerable<Schedule.Models.DTOs.ZOLoadDTO>

@{
    ViewBag.Title = "Нагрузка";
}

<h2>@ViewBag.LoadName</h2>
<hr />
<h3>@ViewBag.LoadKind</h3>
<hr />
<style>
    .layer {
        overflow-x: scroll;
    }

    th, td {
        vertical-align: middle;
        margin: 0 auto;
    }
</style>

<form method="get">
    <div class="form-inline">
        <label class="control-label">Преподаватель: </label>
        @Html.DropDownList("teacher", ViewBag.Teachers as SelectList,
                    htmlAttributes: new { @class = "form-control" })

        <input type="submit" value="Фильтр" class="btn btn-default" />
        @Html.ActionLink("Отмена", "DoneLoadZO")
    </div>
</form>

<hr />

